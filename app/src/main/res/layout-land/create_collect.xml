<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/teal_700">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_menu"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp">

                        <EditText
                            android:id="@+id/enterCollect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="@string/enter_collect"
                            android:maxHeight="100dp"
                            android:minHeight="100dp"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/addCollect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/style_button"
                            android:gravity="center"
                            android:minHeight="48dp"
                            android:text="@string/add_a_new_collection"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/next_add_Theme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/style_button"
                            android:gravity="center"
                            android:minHeight="48dp"
                            android:text="@string/go_to_adding_themes"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_marginRight="2.5dp"/>

                        <TextView
                            android:id="@+id/viewCollect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/style_button"
                            android:gravity="center"
                            android:minHeight="48dp"
                            android:text="@string/view_the_collection"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_marginLeft="2.5dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>